<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E6F0FE"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:elevation="10dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:backgroundTint="#FFFFFF"
            android:layout_height="80dp"
            app:layout_scrollFlags="enterAlways">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/btn_list_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/icon_back" />

                <TextView
                    android:id="@+id/tv_list_title"
                    android:text="비욘드트러스트 17:00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="372dp"
        android:layout_height="773dp"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/detail_back"/>

    <LinearLayout
        android:layout_width="296dp"
        android:layout_height="201dp"
        android:layout_marginTop="173dp"
        android:layout_marginLeft="58dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="67dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/gray1"/>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="67dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="64dp"
                android:background="@drawable/gray2"/>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="67dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/gray8"/>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="67dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="64dp"
                android:background="@drawable/gray7"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="67dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/gray3"/>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="67dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="64dp"
                android:background="@drawable/gray4"/>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="67dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/gray10"/>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="67dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="64dp"
                android:background="@drawable/gray9"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="67dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/gray5"/>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="67dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="64dp"
                android:background="@drawable/gray6"/>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="67dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/gray12"/>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="67dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="64dp"
                android:background="@drawable/gray11"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="296dp"
        android:layout_height="236dp"
        android:layout_marginTop="432dp"
        android:layout_marginLeft="58dp"
        android:src="@drawable/ship_image"/>

    <LinearLayout
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:elevation="30dp"
        android:background="@drawable/custom_reserv_cardview_shape"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="좌석선택"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textColor="#9898A0"
            android:textSize="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="A01, A02, A07, A06"
            android:layout_marginTop="60dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="#191F28"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="146dp"
            android:layout_height="60dp"
            android:background="@drawable/custom_main_cardview_logined_shape"
            android:layout_marginLeft="247dp"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택하기"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>